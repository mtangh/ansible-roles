#!/bin/sh
# $Id$
THIS=${0##*/}
CDIR=`test -n "${0%/*}"  && cd "${0%/*}"; pwd`

# PATH
PATH=/usr/bin:/bin
export PATH

# set environment
profile_d=/etc/bash.bashrc.d
tmplt_dir="${profile_d}/skel.d/${ostype}"
skel_dir=/etc/skel

# remove file(s)
for _src_ in \
$(cd $tmplt_dir; find . -type f|sort 2>/dev/null)
do
  _src_="${_src_//\/dot.//.}"
  _src_="${_src_#*/}"
  [ -n "$_src_" ] ||
    continue
  [ -e "$skel_dir/$_src_" ] &&
    rm -f "$skel_dir/$_src_" 2>/dev/null
done

# synchronization
${profile_d}/bin/mkUserTmplt $tmplt_dir $skel_dir 

# end of script
exit $?
